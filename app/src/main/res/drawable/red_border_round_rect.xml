<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <layer-list>

            <!--            빨간색 사각형 -->
            <item>

                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="#FF0000"/>

                    <corners
                        android:radius="5dp"/>

                </shape>

            </item>

            <!--            흰색 사각형 -->
            <item
                android:top="1dp"
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp">

                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="#FFFFFF"/>

                    <corners
                        android:radius="4dp"/>

                </shape>

            </item>

        </layer-list>


    </item>

    <!--    <item-->
    <!--        android:state_pressed="true">-->

    <!--    </item>-->


</selector>